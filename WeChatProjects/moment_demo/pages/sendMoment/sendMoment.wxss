/* pages/sendMoment/sendMoment.wxss */
.title {
    font-size: xxx-large;
    margin: 20rpx 20rpx 50rpx 20rpx;
}
.container {
    width: 100%;
    height: 100%;
    background: aliceblue;
    display: flex;
    padding: 20rpx;
}

.container .input {
    height: 100%;
    width: 80%;
    margin: 20rpx;
}

.container .input label {
    font-size: large;
}

.container .input input {
    height: 70rpx;
    margin: 10rpx 20rpx 20rpx 0;
    background: #ffffff;
    border-radius: 15rpx;
    padding-left: 15rpx;
}



.chooseImg {
    display: flex;
    width: 50%;
    border-radius: 15rpx;
    background: #ffffff;
    align-items: center;
    margin-bottom: 20rpx;
}

.chooseImg image {
    width: 60rpx;
    padding: 15rpx 30rpx 5rpx 30rpx;
}

.btn{
  display: flex;
}

.btn button {
  margin: 20rpx;
  width: 230rpx;
}