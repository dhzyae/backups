/* components/SongListMode/SongListMode.wxss */
.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}

.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  display: flex;
  flex-direction: column;
  position: absolute;
  opacity: 1;
  width: 100%;
  height: 100%;
  margin-top: 60%;
  border-radius: 20rpx 20rpx 0 0;
  background: #ffffff;
}

.showToast .toast-title {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}

.text1 {
  margin-top: 16rpx;
}

.text1, .button1 {
  padding: 20rpx;
}

.list-content {
  width: 100%;
  height: 100%;
}

/* 歌单列表 */
.list-content {
  width: 100%;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background: #ffffff;
}

.list-title {
  display: flex;
  justify-content: space-between;
  padding-top: 15rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
}

.list-title text {
  font-size: 23rpx;
  color: #a6a6a6;
}

.list-items {
  padding: 0 0 20rpx 20rpx;
}

.song-list {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.song-list .item-img image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  border: 1px solid #d9d7d7;
}

.song-list .item-title text {
  margin-left: 20rpx;
}