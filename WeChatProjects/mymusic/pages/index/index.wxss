/* pages/index/index.wxss */
.indexContainer {
    background-color: #eeeded;
    padding-top: 25rpx;
}
/* 搜索按钮 */
.searchBtn input {
    width: 93%;
    height: 60rpx;
    background-color: #FFFFFF;
    margin: 0 auto;
    padding-left: 30rpx;
    margin-bottom: 20rpx;
    border-radius: 30rpx;
    box-sizing: border-box;
}

.banners {
    width: 100%;
    height: 300rpx;
    margin: 10rpx 0;
}

.banners image {
    display: flex;
    width: 93%;
    height: 100%;
    border-radius: 20rpx;
    margin: 0 auto;
}

.navContainer {
    display: flex;
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: #87CEFA;
    font-size: 50rpx;
    margin: 20rpx 0;
    color:#fff
}
.navItem text {
    font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer {
    padding: 20rpx;
}

/* 推荐内容区 */
.recommendScroll {
    display: flex;
    height: 300rpx;
}

.userItem {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.userItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.userItem text {
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

/* 排行榜 */
.topList {
  padding: 20rpx;
}

.topListSwiper {
  height: 450rpx;
}

.swiperItem {
  width: 96%;
  background: #fbfbfb;
  border-radius: 20rpx;
  padding-left: 16rpx;
  padding-bottom: 20rpx;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem {
  /* 当一个元素设置为flex，其子元素会自动成为block元素*/
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
