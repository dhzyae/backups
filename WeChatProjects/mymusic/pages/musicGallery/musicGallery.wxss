/* pages/searchList/searchList.wxss */
.search-list {
    width: 100%;
    height: 100%;
    background: #eeeded;
}

.search-list .content {
    padding: 30rpx;
}

.personal-info {
    display: flex;
    align-items: center;
    background: #ffffff;
    border-radius: 20rpx;
    box-sizing: border-box;
}

.personal-info .user .nickname {
    font-size: 45rpx;
    margin-left: 30rpx;
    color: #4399fc;
}

.avatar image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 90rpx;
    margin: 20rpx 0 15rpx 20rpx;
}

/*歌单列表*/
.list-content {
    width: 100%;
    margin-top: 20rpx;
    border-radius: 20rpx;
    background: #ffffff;
}

.list-title {
    display: flex;
    justify-content: space-between;
    padding-top: 15rpx;
    padding-right: 20rpx;
    padding-left: 20rpx;
}

.list-title text {
    font-size: 23rpx;
    color: #a6a6a6;
}

.list-items {
    padding: 0 0 20rpx 20rpx;
}

.song-list {
    display: flex;
    align-items: center;
    margin-top: 15rpx;
}

.song-list .item-img image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 15rpx;
    border: 1px solid #d9d7d7;
}

.song-list .item-title text {
    margin-left: 20rpx;
}

/*弹出框*/
.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}


.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 70%;
  margin-left: 15%;
  margin-top: 40%;
}

.toast-title {
  padding-left: 5%;
  background-color: #2196f3;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}

.toast-main {
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: white;
  text-align: center;
}

.toast-input {
  margin-left: 5%;
  margin-right: 5%;
  border: 1px solid #ddd;
  border-radius: 20rpx;
  padding-left: 2vh;
  padding-right: 2vh;
  padding-top: 1vh;
  padding-bottom: 1vh;
}

.toast-button {
  display: flex;
}

.button1 {
  width: 50%;
}

.button2 {
  width: 50%;
}

.button1 button {
  width: 100%;
  background-color: white;
  color: red;
  border-radius: 0px;
  border-bottom-left-radius: 16rpx;
}

.button2 button{
  width: 100%;
  background-color: white;
  color: black;
  border-radius: 0px;
  border-bottom-right-radius: 16rpx;
}
