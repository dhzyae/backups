<!--pages/register/register.wxml-->
<view class="container">
  <view class="wrapper">
    <view class="left-top-sign">Register</view>
    <view class="welcome">
      免费注册！
    </view>
    <view class="input-content">
      <view class="input-item">
        <text class="tit">用户名</text>
        <input  type="text" placeholder="请输入手机号码" data-test="abc" data-type="username" id="username" bindinput="handleInput"/>
      </view>
      <view class="input-item">
        <text class="tit">密码</text>
        <input type="password"  placeholder="请输入密码" data-test="abc" data-type="password" id="password" bindinput="handleInput"/>
      </view>
    </view>
    <button class="confirm-btn" bindtap="register">注册</button>
  </view>
  <view class="register-section" bindtap="toLogin">
    已有账号?
    <text>去登录</text>
  </view>
</view>

