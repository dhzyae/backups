/* 头部 */
.header {
  background-image: url(https://6d6f-mouse-7gwvffrr130abba3-1314726912.tcb.qcloud.la/header_img.gif);
  background-repeat: no-repeat;
  background-size: 100%;
  width: 100%;
  height: 423rpx;
