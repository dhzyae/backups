/* pages/index/index.wxss */
.container {
  width: 100%;
  height: 100vh;
  background: #47A666;
}

.nav {
  padding-top: 50rpx;
  display: flex;
  justify-content: center;
}

.nav .title {
  width: 500rpx;
  height: 170rpx;
}

.main {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  font-family: '微软雅黑';
}

.wrapper {
  width: 320px;
  background: #FFFFFF;
  border-radius: 24rpx;
}

.wrapper .nav-bar {
  width: 100%;
  display: flex;
  justify-content: center;
}

.main .nav-bar image {
  height: 64rpx;
}

.user-info {
  text-align: center;
}

.phone-number {
  margin-top: 30rpx;
  font-weight: 600;
  font-size: 15px;
  color: #505050;
}

.now-time {
  margin-top: 30rpx;
  font-size: 17px;
  font-weight: 600;
  color: #949399;
}

.xck image {
  width: 58%;
  margin-top: -20rpx;
}

.line {
  width: 100%;
  height: 1rpx;
  display: flex;
  justify-content: center;
}

.line view {
  width: 86%;
  height: 2rpx;
  background: #949399;
}

.address {
  margin: 10rpx 22rpx 20rpx 24rpx;
  display: flex;
  justify-content: center;
}

.address .txt {
  text-align: left;
  margin-left: 20rpx;
}

.address .txt .t1 {
  color: #949399;
  font-weight: 500;
}

.address .txt .t2 {
  color: #272727;
  font-weight: 600;
}

.footer {
  display: flex;
  justify-content: center;
  margin-top: -26rpx;
}